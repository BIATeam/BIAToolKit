{
  "version": "5.0.0",
  "features": [
    {
      "name": "DTO",
      "dotNetTemplates": [
        {
          "inputPath": "Domain\\Mappers\\EntityMapperTemplate.tt",
          "outputPath": "{Project}.Domain\\{Domain}\\Mappers\\{Entity}Mapper.cs"
        },
        {
          "inputPath": "DomainDto\\EntityDtoTemplate.tt",
          "outputPath": "{Project}.Domain.Dto\\{Domain}\\{Entity}Dto.cs"
        }
      ]
    },
    {
      "name": "Option",
      "dotNetTemplates": [
        {
          "inputPath": "PresentationApi\\Controllers\\EntityOptionsController.tt",
          "outputPath": "{Project}.Presentation.Api\\Controllers\\{Domain}\\{Entity}OptionsController.cs"
        },
        {
          "inputPath": "Application\\EntityOptionAppService.tt",
          "outputPath": "{Project}.Application\\{Domain}\\{Entity}OptionAppService.cs"
        },
        {
          "inputPath": "Application\\IEntityOptionAppService.tt",
          "outputPath": "{Project}.Application\\{Domain}\\I{Entity}OptionAppService.cs"
        },
        {
          "inputPath": "Domain\\Mappers\\EntityOptionMapperTemplate.tt",
          "outputPath": "{Project}.Domain\\{Domain}\\Mappers\\{Entity}OptionMapper.cs"
        },
        {
          "inputPath": "CrosscuttingCommon\\PartialOptionRightsTemplate.tt",
          "outputPath": "{Project}.Crosscutting.Common\\Rights.cs",
          "isPartial": true,
          "partialInsertionMarkup": "RightsForOption"
        }
      ]
    }
  ]
}
