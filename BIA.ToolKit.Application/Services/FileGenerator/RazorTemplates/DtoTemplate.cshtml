@using RazorLight
@using BIA.ToolKit.Application.Services.FileGenerator.RazorModels
@inherits RazorLight.TemplatePage<DtoModel>

// <copyright file="@(Model.DtoName).cs" company="@(Model.CompanyName)">
//     Copyright (c) @(Model.CompanyName). All rights reserved.
// </copyright>

namespace @(Model.CompanyName).@(Model.ProjectName).DomainDto.@(Model.DomainName).@(Model.DtoName)
{
    using System;
    @if (Model.HasCollectionOptions)
    {
    @:using System.Collections.Generic; 
    }
    using BIA.Net.Core.Domain.Dto.Base;
    @if (Model.HasOptions)
    {
    @:using BIA.Net.Core.Domain.Dto.CustomAttribute;
    @:using BIA.Net.Core.Domain.Dto.Option; 
    }

    /// <summary>
    /// The DTO used to represent @(Model.NameArticle) @(Model.EntityName).
    /// </summary>
    public class @(Model.DtoName) : BaseDto<int>
    {
        @foreach (var property in Model.Properties)
        {
        @:/// <summary>
        @:/// Gets or sets the @property.Name
        @:/// </summary>
        if(property.IsOption)
        {
        @:[BiaDtoField(ItemType = "@property.OptionType")]    
        }
        @:public @Raw(property.Type) @property.Name { get; set; }
        @:
        }
    }
}
