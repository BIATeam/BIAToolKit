# EditorConfig - https://editorconfig.org
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
indent_size = 4

# XAML files
[*.xaml]
indent_size = 4
indent_style = space

# XML files
[*.xml]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Config files
[*.config]
indent_size = 2

# Solution files
[*.sln]
indent_style = tab

# Project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2
