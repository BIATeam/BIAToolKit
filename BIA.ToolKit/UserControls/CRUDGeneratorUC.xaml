<UserControl x:Class="BIA.ToolKit.UserControls.CRUDGeneratorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIA.ToolKit.Application.ViewModel;assembly=BIA.ToolKit.Application"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="922">
    <UserControl.DataContext>
        <local:CRUDGeneratorViewModel />
    </UserControl.DataContext>
    <Grid Margin="0,0,-120,0">

        <Label Content="Dto file:" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top" Foreground="White"  />
        <ComboBox ItemsSource="{Binding DtoFiles.Keys}" SelectedValue="{Binding DtoSelected}" HorizontalAlignment="Left" Margin="40,23,0,0" VerticalAlignment="Top" Width="300" SelectionChanged="ModifyDto_SelectionChanged"/>

        <Label Content="Data model zip file:" HorizontalAlignment="Left" Margin="400,0,0,0" VerticalAlignment="Top" Foreground="White"  />
        <ComboBox ItemsSource="{Binding ZipFiles.Keys}" SelectedValue="{Binding ZipSelected}" HorizontalAlignment="Left" Margin="420,23,0,0" VerticalAlignment="Top" Width="300" SelectionChanged="ModifyZip_SelectionChanged"/>

        <Label Content="Dto properties:" HorizontalAlignment="Left" Margin="20,40,0,0" VerticalAlignment="Top" Foreground="White"  />
        <Grid >
            <ListView Name="DtoParsedPanel" Margin="40,63,320,70" ItemsSource="{Binding DtoProperties}">
                <ListView.View>
                    <GridView >
                        <GridViewColumn Header="Property" Width="255" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Type found" Width="200" DisplayMemberBinding="{Binding Type}"/>
                        <GridViewColumn Header="Type wanted" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <!--<TextBlock Text="{Binding Type}" />-->
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Button Content="1. Parse Dto" HorizontalAlignment="Right" Margin="0,90,140,0" Width="120" x:Name="ParseDto"  Height="40" VerticalAlignment="Top" Click="ParseDto_Click" IsEnabled="{Binding IsButtonParseDtoEnable}"/>
        <Button Content="2. Parse Zip" HorizontalAlignment="Right" Margin="0,140,140,0" Width="120" x:Name="ParseZip"  Height="40" VerticalAlignment="Top" Click="ParseZip_Click"  IsEnabled="{Binding IsButtonParseZipEnable}"/>
        <Button Content="3. Generate CRUD" HorizontalAlignment="Right" Margin="0,190,140,0" Width="120" x:Name="GenerateCrud"  Height="40" VerticalAlignment="Top" Click="GenerateCrud_Click" IsEnabled="{Binding IsButtonGenerateCrudEnable}"/>


    </Grid>
</UserControl>
