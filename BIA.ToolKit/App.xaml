<Application x:Class="BIA.ToolKit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Startup="OnStartup">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark"
                                             PrimaryColor="LightGreen"
                                             SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Global Converters  -->
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

            <!--  Global Thickness Resources for Form Layout  -->
            <Thickness x:Key="FormFirstRowMargin">0,0,0,5</Thickness>
            <Thickness x:Key="FormRowMargin">0,5</Thickness>
            <Thickness x:Key="FormGroupFirstRowMargin">0,10,0,5</Thickness>
            <Thickness x:Key="FormColumnSpacing">15,0,0,0</Thickness>

            <!--  Entity Display Template  -->
            <DataTemplate x:Key="EntityDisplayTemplate">
                <TextBlock TextTrimming="CharacterEllipsis">
                    <Run FontWeight="Bold" Text="{Binding Name, Mode=OneTime}" />
                    <Run Text=" - " />
                    <Run FontSize="12"
                         FontStyle="Italic"
                         Text="{Binding NamespaceInProject, Mode=OneTime}" />
                </TextBlock>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>

</Application>
