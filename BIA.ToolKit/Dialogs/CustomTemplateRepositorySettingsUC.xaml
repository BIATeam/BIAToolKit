<Window x:Class="BIA.ToolKit.Dialogs.CustomRepoTemplateUC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:settings="clr-namespace:BIA.ToolKit.Domain.Settings;assembly=BIA.ToolKit.Domain"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:BIA.ToolKit.ViewModels"
        Title="Custom template repository settings"
        Width="500"
        Height="Auto"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <vm:RepositorySettingsVM />
    </Window.DataContext>

    <Window.Resources>
        <ObjectDataProvider x:Key="versioningType"
                            MethodName="GetValues"
                            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="settings:VersioningType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 Margin="5"
                 materialDesign:HintAssist.Hint="Name"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 Text="{Binding Name}" />

        <TextBox Grid.Row="1"
                 Margin="5"
                 materialDesign:HintAssist.Hint="GIT Repository"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 Text="{Binding UrlRepo}" />

        <CheckBox Grid.Row="2"
                  Margin="5"
                  Content="Use a local cloned folder"
                  IsChecked="{Binding UseLocalFolder}" />

        <TextBox x:Name="CompanyFilesLocalFolderText"
                 Grid.Row="3"
                 Margin="5"
                 materialDesign:HintAssist.Hint="Local Repository"
                 IsEnabled="{Binding UseLocalFolder}"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 Text="{Binding LocalFolderPath}" />

        <ComboBox Grid.Row="4"
                  Margin="5"
                  materialDesign:HintAssist.Hint="Versioning"
                  ItemsSource="{Binding Source={StaticResource versioningType}}"
                  SelectedItem="{Binding Versioning}"
                  Style="{StaticResource MaterialDesignFilledComboBox}" />

        <TextBox x:Name="CompanyFilesUrlRelease"
                 Grid.Row="5"
                 Margin="5"
                 materialDesign:HintAssist.Hint="URL Release"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 Text="{Binding UrlRelease}"
                 Visibility="{Binding IsEnabledUrlRelease, Converter={StaticResource BoolToVisConverter}}" />

        <TextBox Grid.Row="6"
                 Margin="5"
                 materialDesign:HintAssist.Hint="Company Name"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 Text="{Binding CompanyName}" />

        <TextBox Grid.Row="7"
                 Margin="5"
                 materialDesign:HintAssist.Hint="Project Name"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 Text="{Binding ProjectName}" />

        <!--  Accept or Cancel  -->
        <StackPanel Grid.Row="8"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button x:Name="okButton"
                    Margin="5"
                    Click="okButton_Click"
                    Content="OK"
                    IsDefault="True" />
            <Button x:Name="cancelButton"
                    Margin="5"
                    Content="Cancel"
                    IsCancel="True" />
        </StackPanel>
    </Grid>

</Window>
