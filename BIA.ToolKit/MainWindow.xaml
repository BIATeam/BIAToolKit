            </TabItem>

        </TabControl>
        <Button Content="Save settings" HorizontalAlignment="Right" RenderTransformOrigin="0.429,2.91" Width="206" x:Name="SaveSettings" Click="SaveSettings_Click" Grid.Row="1" Margin="0,10,10,0" Height="23" VerticalAlignment="Top"/>

        <!--<TextBlock Background="Black" HorizontalAlignment="Center" Grid.Row="2" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Height="130" Width="780" Name="OutputText" Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Auto"/>-->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Margin="10,50,10,0" Name="OutputTextViewer" Height="190" VerticalAlignment="Top">
            <TextBlock Name="OutputText" TextWrapping="Wrap" LineHeight="10" Background="Black" RenderTransformOrigin="0.5,0.5" Height="189" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.149"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.247"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
