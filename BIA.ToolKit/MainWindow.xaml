<Window x:Class="BIA.ToolKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:BIA.ToolKit.ViewModels"
        xmlns:uc="clr-namespace:BIA.ToolKit.UserControls" d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="BIA Toolkit" Height="820" Width="1300" Icon="/Images/Tools.ico" WindowStartupLocation="CenterScreen" MinHeight="800" MinWidth="1300" d:Background="#4d4d4d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.02*"/>
            </Grid.RowDefinitions>
            <Grid Background="Black" Opacity="0.2"/>
            <TabControl Grid.Row="0" Name="MainTab">
                <TabItem Header="CONFIGURATION">
                    <Grid Background="#FF000000" x:Name="TabConfig">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Image gif:ImageBehavior.AnimatedSource="Images/LogoBIA.png" Grid.RowSpan="2" Opacity="0.6"/>

                            <Grid Grid.Row="0" Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="ImportConfigButton" Grid.Row="0" Height="35" Command="{Binding ImportConfigCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Import" Height="25" Width="25"/>
                                            <Label Content="Import Configuration" Foreground="Black"/>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="ExportConfigButton" Grid.Row="1" Height="35" Style="{StaticResource MaterialDesignPaperButton}" Command="{Binding ExportConfigCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="Export Configuration" Foreground="White"/>
                                            <materialDesign:PackIcon Kind="Export" Height="25" Width="25"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal">
                                        <Button Height="20" Padding="0" x:Name="UpdateButton" VerticalAlignment="Center" ToolTip="New version available !" Background="Transparent" Foreground="Transparent" BorderThickness="0" Cursor="Hand" Visibility="{Binding UpdateAvailable, Converter={StaticResource BoolToVisConverter}}" Command="{Binding UpdateCommand}">
                                            <Image Source="/Images/update.png" />
                                        </Button>
                                        <Label Grid.ColumnSpan="2" Content="{Binding ApplicationVersion}" VerticalAlignment="Center" Foreground="#FFF0F0F0" d:Content="V0.0.0.0"/>
                                        <Button Height="18" x:Name="CheckUpdateButton" VerticalAlignment="Center" ToolTip="Check for update" Padding="1" Margin="2,0" Command="{Binding CheckForUpdatesCommand}">
                                            <Image Source="/Images/rafraichir-32.png" Cursor="Hand" RenderOptions.BitmapScalingMode="Fant" />
                                        </Button>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <CheckBox Name="AutoUpdateCheckbox" IsChecked="{Binding Settings_AutoUpdate}"/>
                                        <Label VerticalAlignment="Center" Foreground="White" Content="Auto update" FontSize="10" Margin="0,1,0,0"/>
                                    </StackPanel>
                                    <Button Margin="0,5" Style="{StaticResource MaterialDesignPaperButton}" Content="Toolkit Repository Settings" Grid.Row="2" Width="auto" HorizontalAlignment="Right" Command="{Binding OpenToolkitRepositorySettingsCommand}"/>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="1" Margin="30,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="0.05*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.RowSpan="2" Background="Black" Opacity="0.4"/>
                                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,5">
                                        <Label Grid.Row="0" Margin="0,2,0,0" Content="TEMPLATES REPOSITORIES" Foreground="White" FontWeight="Bold" FontSize="25"/>
                                        <Button Padding="5,0" Margin="10,0,0,0"  Command="{Binding AddTemplateRepositoryCommand}" ToolTip="Add Template Repository">
                                            <materialDesign:PackIcon Kind="Add" Height="25" Width="25"/>
                                        </Button>
                                    </StackPanel>
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" Margin="10,0,0,0">
                                        <ItemsControl ItemsSource="{Binding TemplateRepositories}" VerticalAlignment="Top">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type local:RepositoryViewModel}">
                                                    <uc:RepositoryResumeUC Margin="0,0,0,10" DataContext="{Binding}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>


                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.RowSpan="2" Background="Black" Opacity="0.4"/>
                                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,5">
                                        <ToggleButton Margin="0,0,10,0" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding Settings_UseCompanyFiles}" ToolTip="Use Company Files"/>
                                        <Label Grid.Row="0" Margin="0,2,0,0" Content="COMPANY FILES REPOSITORIES" Foreground="White" FontWeight="Bold" FontSize="25" IsEnabled="{Binding Settings_UseCompanyFiles}"/>
                                        <Button Padding="5,0" Margin="10,0,0,0" Command="{Binding AddCompanyFilesRepositoryCommand}" ToolTip="Add Company Files Repository" IsEnabled="{Binding Settings_UseCompanyFiles}">
                                            <materialDesign:PackIcon Kind="Add" Height="25" Width="25"/>
                                        </Button>
                                    </StackPanel>
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" Margin="10,0,0,0" IsEnabled="{Binding Settings_UseCompanyFiles}">
                                        <ItemsControl ItemsSource="{Binding CompanyFilesRepositories}" VerticalAlignment="Top">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type local:RepositoryViewModel}">
                                                    <uc:RepositoryResumeUC Margin="0,0,0,10" DataContext="{Binding}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="CREATE PROJECT" Selector.Selected="OnTabCreateSelected">
                    <Grid x:Name="TabCreate">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.Background>
                            <ImageBrush Opacity="0.7" ImageSource="/Images/bg-default.jpg"/>
                        </Grid.Background>

                        <Grid Grid.Row="0" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Column="0" Style="{StaticResource MaterialDesignFilledTextBox}" materialDesign:HintAssist.Hint="Projects Parent Path" Text="{Binding Settings_RootProjectsPath}" TextWrapping="Wrap"/>
                                <Button Grid.Column="1" Margin="5" Content="..." Command="{Binding BrowseCreateProjectRootFolderCommand}"/>
                            </Grid>
                            <Grid Grid.Column="1" Margin="10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" Style="{StaticResource MaterialDesignFilledTextBox}" materialDesign:HintAssist.Hint="Company Name" Text="{Binding Settings_CreateCompanyName}" TextWrapping="Wrap"/>
                                <TextBox Margin="0,10" Grid.Row="1" Style="{StaticResource MaterialDesignFilledTextBox}" materialDesign:HintAssist.Hint="Project Name" Text="" TextWrapping="Wrap" x:Name="CreateProjectName" IsEnabled="True"/>
                            </Grid>
                            <Button Grid.Column="2" Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" Height="50" Width="150" Content="Create" HorizontalAlignment="Right" Command="{Binding CreateProjectCommand}" VerticalAlignment="Top"/>
                        </Grid>

                        <ContentControl Grid.Row="1" VerticalAlignment="Bottom" x:Name="CreateVersionAndOptionHost" Margin="10" Height="auto"/>
                    </Grid>
                </TabItem>
                <TabItem Header="MODIFY EXISTING PROJECT" Selector.Selected="OnTabModifySelected">
                    <Grid>
                        <Grid.Background>
                            <ImageBrush Opacity="0.3" ImageSource="/Images/workOnComputer2.jpg" Stretch="UniformToFill"/>
                        </Grid.Background>
                        <ContentControl x:Name="ModifyProjectHost"/>
                    </Grid>
                </TabItem>
                <TabItem Header="File Generator" Visibility="Collapsed">
                    <Grid x:Name="TabFileGenerator">
                        <Grid.Background>
                            <ImageBrush ImageSource="/Images/fileGenerator.jpg"/>
                        </Grid.Background>
                        <TextBox x:Name="txtFileGenerator_File" HorizontalAlignment="Left" Height="39" Margin="38,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="511" IsEnabled="False" FontWeight="Bold" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
