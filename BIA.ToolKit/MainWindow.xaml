<Window x:Class="BIA.ToolKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:BIA.ToolKit"
        xmlns:uc="clr-namespace:BIA.ToolKit"
        mc:Ignorable="d"
        Title="BIA Toolkit" Height="765" Width="1035" Icon="/Images/Tools.ico" MaxWidth="1035" MaxHeight="765" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFE5E5E5" Width="1000" Margin="10,11,10,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <TabControl Name="MainTab">
            <TabItem Header="Config">
                <Grid Margin="10,10,10,10" Background="#FF000000"  x:Name="TabConfig">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image gif:ImageBehavior.AnimatedSource="Images/LogoBIA.png" Grid.ColumnSpan="3" Margin="-12,-29,32,-29"/>
                    <Label Foreground="White" Content="BIA Template repository" HorizontalAlignment="Center"  Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
                    <RadioButton Foreground="White" Content="Use the BIATemplate GitHub repository: &#xD;&#xA;https://github.com/BIATeam/BIATemplate.git " HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" GroupName="BIATemplateSrc" Name="BIATemplateGitHub" Checked="BIATemplateGitHub_Checked"/>
                    <RadioButton Foreground="White" Content="Use a local cloned folder:" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" GroupName="BIATemplateSrc"  Name="BIATemplateLocalFolder" Checked="BIATemplateLocalFolder_Checked" />
                    <TextBox HorizontalAlignment="Left" Margin="37,109,0,0" Text="D:\...\BIATemplate" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" Name="BIATemplateLocalFolderText" IsEnabled="False" TextChanged="BIATemplateLocalFolderText_TextChanged"/>
                    <Button Content="..." HorizontalAlignment="Left" Margin="347,108,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.429,2.91" Width="35" Name="BIATemplateLocalFolderBrowse" IsEnabled="False" Click="BIATemplateLocalFolderBrowse_Click"/>
                    <Button Content="Synchronize" HorizontalAlignment="Center" Margin="0,162,0,0" RenderTransformOrigin="0.429,2.91" Width="206" Name="BIATemplateLocalFolderSync" Click="BIATemplateLocalFolderSync_Click" Height="20" VerticalAlignment="Top"/>

                    <CheckBox Name="UseCompanyFile"  HorizontalAlignment="Left" Margin="83,0,0,189" Checked="UseCompanyFile_Checked" Unchecked="UseCompanyFile_Checked" Grid.Column="2" Height="15" VerticalAlignment="Bottom"/>
                    <Label Foreground="White" Content="Use company files" HorizontalAlignment="Center" Margin="0,0,0,178" FontSize="20" FontWeight="Bold" Grid.Column="2" Height="37" VerticalAlignment="Bottom"/>
                    <RadioButton Foreground="White" Content="Use a Git repository:" HorizontalAlignment="Left" Margin="11,0,0,165" GroupName="CompanyFilesSrc" Grid.Column="2" Name="CompanyFilesGit" Checked="CompanyFilesGit_Checked" Height="15" VerticalAlignment="Bottom"/>
                    <TextBox HorizontalAlignment="Left" Margin="38,0,0,112" Text="https://.../_git/BIACompanyFiles" TextWrapping="Wrap" Width="345" Grid.Column="2" Name="CompanyFilesGitRepo" Height="48" VerticalAlignment="Bottom"/>
                    <RadioButton Foreground="White" Content="Use a local cloned folder:" HorizontalAlignment="Left" Margin="10,0,0,93" GroupName="CompanyFilesSrc"  Grid.Column="2" Name="CompanyFilesLocalFolder" Checked="CompanyFilesLocalFolder_Checked" Height="15" VerticalAlignment="Bottom"/>
                    <TextBox HorizontalAlignment="Left" Margin="37,0,0,63" Text="D:\...\BIACompanyFiles" TextWrapping="Wrap" Width="310" Grid.Column="2" Name="CompanyFilesLocalFolderText" IsEnabled="False" Height="18" VerticalAlignment="Bottom"/>
                    <Button Content="..." HorizontalAlignment="Left" Margin="347,0,0,62" RenderTransformOrigin="0.429,2.91" Width="35" Grid.Column="2" Name="CompanyFilesLocalFolderBrowse" IsEnabled="False" Click="CompanyFilesLocalFolderBrowse_Click" Height="20" VerticalAlignment="Bottom"/>
                    <Button Content="Synchronize" HorizontalAlignment="Center" Margin="0,0,0,12" RenderTransformOrigin="0.429,2.91" Width="206" Grid.Column="2" Name="CompanyFilesLocalFolderSync" Click="CompanyFilesLocalFolderSync_Click" Height="20" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Create project" Selector.Selected="OnTabCreateSelected">
                <Grid Margin="10,10,10,10" x:Name="TabCreate">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/bg-default.jpg"/>
                    </Grid.Background>
                    <Label Content="Project parent path" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox HorizontalAlignment="Left" Margin="29,25,0,0" Text="D:\...\MyRootProjectPath" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" x:Name="CreateProjectRootFolderText" TextChanged="CreateProjectRootFolderText_TextChanged"/>
                    <Button Content="..." HorizontalAlignment="Left" Margin="339,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.429,2.91" Width="35" x:Name="CreateProjectRootFolderBrowse" Click="CreateProjectRootFolderBrowse_Click"/>
                    <Label Content="Company name" HorizontalAlignment="Left" Margin="406,1,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox HorizontalAlignment="Left" Margin="425,26,0,0" Text="MyCompany" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" x:Name="CreateCompanyName" IsEnabled="True"/>
                    <Label Content="Project name" HorizontalAlignment="Left" Margin="406,51,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox HorizontalAlignment="Left" Margin="425,76,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" x:Name="CreateProjectName" IsEnabled="True"/>

                    <uc:VersionAndOptionUserControl x:Name="CreateVersionAndOption" Margin="10,171,10,0" Height="149" VerticalAlignment="Top"/>



                    <Button Content="Create" HorizontalAlignment="Right" Margin="0,33,30,0" Width="112" Click="Create_Click" Height="48" VerticalAlignment="Top"/>


                </Grid>
            </TabItem>
            <TabItem Header="Modify existing project" Selector.Selected="OnTabModifySelected" >
                <Grid Margin="10,10,10,10" x:Name="TabModify">

                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/workOnComputer2.jpg" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Project parent path" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Foreground="White"/>
                    <TextBox HorizontalAlignment="Left" Margin="29,25,0,0" Text="D:\...\MyRootProjectPath" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" x:Name="ModifyProjectRootFolderText" TextChanged="ModifyProjectRootFolderText_TextChanged" Grid.ColumnSpan="2"/>
                    <Button Content="..." HorizontalAlignment="Left" Margin="339,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.429,2.91" Width="35" x:Name="ModifyProjectRootFolderBrowse" Click="CreateProjectRootFolderBrowse_Click"/>
                    <Label Content="Project Folder" HorizontalAlignment="Left" Margin="494,0,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1"/>
                    <ComboBox HorizontalAlignment="Left" Margin="520,25,0,0" VerticalAlignment="Top" Width="120" x:Name="ModifyProjectFolder" SelectionChanged="ModifyProject_SelectionChanged" Grid.Column="1"/>
                    <Label Content="Version detected : " HorizontalAlignment="Left" Margin="694,0,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1"/>
                    <Label Content="???" HorizontalAlignment="Left" Margin="827,0,0,0" VerticalAlignment="Top" Foreground="White" x:Name="ModifyProjectVersion" Grid.Column="1"/>
                    <Label Content="Project name detected : " HorizontalAlignment="Left" Margin="694,25,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1"/>
                    <Label Content="???" HorizontalAlignment="Left" Margin="827,25,0,0" VerticalAlignment="Top" Foreground="White" x:Name="ModifyProjectName" Grid.Column="1"/>
                    <Label Content="Company detected : " HorizontalAlignment="Left" Margin="694,0,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="???" HorizontalAlignment="Left" Margin="827,0,0,0" VerticalAlignment="Top" Foreground="White" x:Name="ModifyProjectCompany" Grid.Column="1" Grid.Row="1"/>
                    <TabControl Grid.Row="1" Background="Transparent" >
                        <TabItem Header="Migration">
                            <Grid Background="Transparent" VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="170"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <GroupBox Header="Origial" Margin="0,0,0,0" Foreground="White" BorderBrush="White" Name="CompanyFileGroup" Visibility="Visible" Grid.Row="0">
                                    <uc:VersionAndOptionUserControl x:Name="MigrateOriginVersionAndOption" />
                                </GroupBox>
                                <GroupBox Header="Target" Margin="0,0,0,0" Foreground="White" BorderBrush="White" Visibility="Visible" Grid.Row="1">
                                    <uc:VersionAndOptionUserControl x:Name="MigrateTargetVersionAndOption"/>
                                </GroupBox>
                                <Button Content="Migrate" HorizontalAlignment="Center"  Width="123" x:Name="Migrate" Margin="0,0,0,0" Height="69" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Click="Migrate_Click"/>
                                <Label Content="Or by step :" Margin="0,133,0,0" VerticalAlignment="Top" Foreground="White" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"/>
                                <Button Content="1 - Generate Only" HorizontalAlignment="Center"  Width="122" x:Name="MigrateGenerateOnly" Height="35" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Click="MigrateGenerateOnly_Click"/>
                                <Button Content="2 - Open Folder" HorizontalAlignment="Center"  Width="122" x:Name="MigrateOpenFolder" Height="35" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Click="MigrateOpenFolder_Click" Margin="0,0,0,0" IsEnabled="False"/>
                                <Button Content="3 - Apply Diff" HorizontalAlignment="Center"  Width="122" x:Name="MigrateApplyDiff" Height="35" VerticalAlignment="Bottom" Grid.Row="1" Grid.Column="1" Click="MigrateApplyDiff_Click" Margin="0,98,0,0" IsEnabled="False"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Rename project">
                            <Grid Background="Transparent"/>
                        </TabItem>
                        <TabItem Header="Add crud">
                            <Grid Background="Transparent"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="File Generator">
                <Grid Margin="10,10,10,10"  x:Name="TabFileGenerator">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/fileGenerator.jpg"/>
                    </Grid.Background>
                    <TextBox x:Name="txtFileGenerator_File" HorizontalAlignment="Left" Height="39" Margin="38,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="511" IsEnabled="False" FontWeight="Bold" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
